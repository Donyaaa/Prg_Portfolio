@model Prg_Portfolio.Models.ViewModel.VM_PageBlog


<!-- ##### Breadcrumb Area Start ##### -->
<div class="breadcrumb-area">
    <!-- Top Breadcrumb Area -->
    <div class="top-breadcrumb-area bg-img bg-overlay d-flex align-items-center justify-content-center"
         style="background-image: url(/Content/Img/24.jpg);">
        <h2>وبلاگ شخصی</h2>
    </div>

    <div class="container rtl">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Index"><i class="fa fa-home"></i> صفحه اصلی</a></li>
                        <li class="breadcrumb-item"><a href="/Blog"> وبلاگ</a></li>
                        <li class="breadcrumb-item active" aria-current="page"> وبلاگ شخصی </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ##### Breadcrumb Area End ##### -->
<!-- ##### Blog Content Area Start ##### -->
<section class="blog-content-area section-padding-0-100">
    <div class="container">
        <div class="row justify-content-center rtl">
            <!-- Blog Posts Area -->
            <div class="col-12 col-md-8">
                <div class="blog-posts-area">
                    @foreach (var item in Model.PictureBlogVMNew)
                    {
                        <!-- Post Details Area -->
                        <div class="single-post-details-area text2">
                            <div class="post-content">
                                <h4 class="post-title">
                                    @item.BlogVMNew.Title
                                </h4>
                                <div class="post-meta mb-30">
                                    <a href=""><i class="fa fa-clock-o" aria-hidden="true"> </i> @string.Format("{0:yyyy/MM/dd}", item.BlogVMNew.Date)</a>
                                    <a href=""><i class="fa fa-user" aria-hidden="true"></i> @item.UserName.FirstName @item.UserName.LastName</a>
                                </div>
                                <div class="post-thumbnail mb-30">
                                    <img src="~/Content/Img/@item.PictureVMNew.Name" alt="">
                                </div>
                                <p>@item.BlogVMNew.Text</p>
                                <div class="row mb-30">
                                    <div class="col-lg-7">
                                        <p>@item.BlogVMNew.Description</p>
                                    </div>
                                    <div class="col-lg-5">
                                        <img src="~/Content/Img/@item.PictureVMNew.Name" alt="">
                                    </div>
                                </div>
                                <p>@item.BlogVMNew.Description</p>
                                <blockquote>

                                    @foreach (var itemm in Model.SentensessVM)
                                    {
                                        <div class="blockquote-text">
                                            <h5>
                                                @itemm.Title
                                            </h5>
                                            <h5>@itemm.WriterName</h5>
                                        </div>
                                    }
                                </blockquote>
                                <h4>@item.BlogVMNew.Text</h4>
                                <p>@item.BlogVMNew.Description</p>
                            </div>
                        </div>
                    }
                    <!-- Post Tags & Share -->
                    <div class="post-tags-share d-flex justify-content-between align-items-center">
                        <!-- Tags -->
                        <ol class="popular-tags d-flex align-items-center flex-wrap">
                            <li><span>تگ:</span></li>
                            <li><a href="#">گیاهان</a></li>
                            <li><a href="#">کاکتوس</a></li>
                        </ol>
                        <!-- Share -->
                        <div class="post-share">
                            <a href="#"><i class="fab fa-facebook" aria-hidden="true"></i></a>
                            <a href="#"><i class="fab fa-twitter" aria-hidden="true"></i></a>
                            <a href="#"><i class="fab fa-google-plus" aria-hidden="true"></i></a>
                            <a href="#"><i class="fab fa-instagram" aria-hidden="true"></i></a>
                        </div>
                    </div>

                    <!-- Comment Area Start -->
                    <div class="comment_area clearfix text2">
                        <h4 class="headline">@Model.CommentBlogVM.Count() نظر</h4>
                        @foreach (var item in Model.CommentBlogVM)
                        {
                            <ol>
                                <!-- Single Comment Area -->
                                <li class="single_comment_area">
                                    <div class="comment-wrapper d-flex">
                                        <!-- Comment Meta -->
                                        <div class="comment-author">
                                            <img src="~/Content/Img/23.jpg" alt="">
                                        </div>
                                        <!-- Comment Content -->
                                        <div class="comment-content">
                                            <div class="d-flex align-items-center justify-content-between m-2">
                                                <h5>@item.User_Id</h5>
                                                <span class="comment-date text1">@string.Format("{0:yyyy/MM/dd}", item.CreationDateTime)</span>
                                            </div>
                                            <p>@item.Text</p>
                                            <a class="active" href="#">پاسخ</a>
                                        </div>
                                    </div>
                                </li>
                            </ol>
                        }
                    </div>

                    <!-- Leave A Comment -->
                    <div class="leave-comment-area clearfix">
                        <div class="comment-form">
                            <h4 class="headline text2">پیام بگذارید</h4>

                            <div class="contact-form-area">
                                <!-- Comment Form -->
                                <form action="#" method="post">
                                    <div class="row">
                                        <div class="col-12 col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="contact-name"
                                                       placeholder="نام">
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="form-group">
                                                <input type="email" class="form-control" id="contact-email"
                                                       placeholder="ایمیل">
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <textarea class="form-control" name="message" id="message" cols="30"
                                                          rows="10" placeholder="نظر"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-12 text2">
                                            <button type="submit" class="btn alazea-btn">ارسال نظر</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Blog Sidebar Area -->
            <div class="col-12 col-sm-9 col-md-4 text2">
                <div class="post-sidebar-area">

                    <!-- ##### Single Widget Area ##### -->
                    <div class="single-widget-area">
                        <form action="#" method="get" class="search-form">
                            <input type="search" name="search" id="widgetSearch" placeholder="جستجو کردن...">
                            <button type="submit"><i class="fa fa-search"></i></button>
                        </form>
                    </div>

                    <!-- ##### Single Widget Area ##### -->
                    <div class="single-widget-area">
                        <!-- Author Widget -->
                        <div class="author-widget">
                            <div class="author-thumb-name d-flex align-items-center">
                                <div class="author-thumb">
                                    <img src="/Content/Img/29.jpg" alt="">
                                </div>
                                <div class="author-name m-3">
                                    <h5>آلن جکسون</h5>
                                    <p>ویرایشگر</p>
                                </div>
                            </div>
                            <p>لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است.</p>
                            <div class="social-info">
                                <a href="#"><i class="fab fa-facebook" aria-hidden="true"></i></a>
                                <a href="#"><i class="fab fa-twitter" aria-hidden="true"></i></a>
                                <a href="#"><i class="fab fa-google-plus" aria-hidden="true"></i></a>
                                <a href="#"><i class="fab fa-instagram" aria-hidden="true"></i></a>
                            </div>
                        </div>
                    </div>

                    <!-- ##### Single Widget Area ##### -->
                    <div class="single-widget-area">
                        <!-- Title -->
                        <div class="widget-title">
                            <h4>پست اخیر</h4>
                        </div>

                        @foreach (var item in Model.PictureBlogVMNew)
                        {
                            <!-- Single Latest Posts -->
                            <div class="single-latest-post d-flex align-items-center">
                                <div class="post-thumb">
                                    <img src="~/Content/Img/@item.PictureVMNew.Name" alt="">
                                </div>
                                <div class="post-content m-3">
                                    <a href="#" class="post-title">
                                        <h6>
                                            @item.BlogVMNew.Title
                                        </h6>
                                    </a>
                                    <a href="#" class="post-date">@string.Format("{0:yyyy/MM/dd}", item.BlogVMNew.Date)</a>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- ##### Single Widget Area ##### -->
                    <div class="single-widget-area">
                        <!-- Title -->
                        <div class="widget-title">
                            <h4>ابر برچسب</h4>
                        </div>
                        <!-- Tags -->
                        <ol class="popular-tags d-flex flex-wrap">
                            @foreach (var item in Model.TagVM)
                            {
                                <li><a href="#">@item.Title</a></li>
                            }
                        </ol>
                    </div>

                    <!-- ##### Single Widget Area ##### -->
                    <div class="single-widget-area">
                        <!-- Title -->
                        <div class="widget-title">
                            <h4>بهترین فروشنده</h4>
                        </div>

                        @foreach (var item in Model.PortofioProductVM2)
                        {
                            <!-- Single Best Seller Products -->
                            <div class="single-best-seller-product d-flex text2">
                                <div class="product-thumbnail">
                                    <a href="shop-details.html"><img src="/Content/Img/@item.PicturVMNew.Name" alt=""></a>
                                </div>
                                <div class="product-info m-3">
                                    <a href="shop-details.html">@item.ProductVMNew.NameProduct </a>
                                    <p>@item.PriceVMNew.Price</p>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ##### Blog Content Area End ##### -->
