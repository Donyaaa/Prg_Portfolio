@model Prg_Portfolio.Models.ViewModel.VM_PageBlog

<!-- ##### Breadcrumb Area Start ##### -->
<div class="breadcrumb-area">
    <!-- Top Breadcrumb Area -->
    <div class="top-breadcrumb-area bg-img bg-overlay d-flex align-items-center justify-content-center"
         style="background-image: url(/Content/Img/24.jpg);">
        <h2>وبلاگ پیش فرض</h2>
    </div>
    <div class="container rtl">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="~/Home/Index"><i class="fa fa-home"></i> صفحه اصلی</a></li>
                        <li class="breadcrumb-item active" aria-current="page"> وبلاگ</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ##### Breadcrumb Area End ##### -->
<!-- ##### Blog Area Start ##### -->
<section class="alazea-blog-area mb-100 rtl">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8">
                <div class="row">
                    <!-- Single Blog Post Area -->
                    <div class="col-12 col-lg-6 ">
                        <div class="single-blog-post mb-50">
                            <div class="post-thumbnail mb-30">
                                <a href="single-post.html"><img class="ClickViewer" src="/Content/Img/@Model.PictureVMNew.Name" alt=""></a>
                                <div class="GetIdForViewer" hidden>@Model.BlogVMNew.Id</div>
                            </div>
                            <div class="post-content">
                                <a href="single-post.html" class="post-title text2 ClickViewer">
                                    <h5>
                                        @Model.BlogVMNew.Title
                                    </h5>
                                </a>
                                <div class="post-meta">
                                    <a href="#"><i class="fa fa-clock-o" aria-hidden="true"></i>@string.Format("{0:yyyy/MM/dd}", Model.BlogVMNew.Date)</a>
                                    <a href="#"><i class="fa fa-user" aria-hidden="true"></i>@Model.UserName.FirstName @Model.UserName.LastName</a>
                                </div>
                                <p class="post-excerpt text2 ClickViewer">
                                    @Model.BlogVMNew.Text
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="post-sidebar-area">
                    <!-- ##### Single Widget Area ##### -->
                    <div class="single-widget-area">
                        <form action="#" method="get" class="search-form">
                            <input type="search" name="search" id="widgetsearch" placeholder="جستجو کردن...">
                            <button type="button"><i class="icon_search"></i></button>
                        </form>
                    </div>
                    <!-- ##### Single Widget Area ##### -->
                    <div class="single-widget-area">
                        <!-- Title -->
                        <div class="widget-title text2">
                            <h4>پست اخیر</h4>
                        </div>

                        <!--Foreach-->
                        @foreach (var item in Model.PictureBlogVMNew)
                        {
                            <!-- Single Latest Posts -->
                            <div class="single-latest-post d-flex align-items-center">
                                <div class="post-thumb">
                                    <img src="~/Content/Img/@item.PictureVMNew.Name" alt="">
                                </div>
                                <div class="post-content m-3">
                                    <a href="#" class="post-title">
                                        <h6>
                                            @item.BlogVMNew.Title
                                        </h6>
                                    </a>
                                    <a href="#" class="post-date">@string.Format("{0:yyyy/MM/dd}", item.BlogVMNew.Date)</a>
                                </div>
                            </div>
                        }
                    </div>
                    <!-- ##### Single Widget Area ##### -->
                    <div class="single-widget-area">
                        <!-- Title -->
                        <div class="widget-title text2">
                            <h4>ابر برچسب</h4>
                        </div>
                        <!-- Tags -->
                        <ol class="popular-tags d-flex flex-wrap text2">
                            @foreach (var item in Model.TagVM)
                            {
                                <li><a href="#">@item.Title</a></li>
                            }
                        </ol>
                    </div>
                    <!-- ##### Single Widget Area ##### -->
                    <div class="single-widget-area">
                        <!-- Title -->
                        <div class="widget-title text2">
                            <h4>پرفروش ترین ها</h4>
                        </div>
                        @foreach (var item in Model.PortofioProductVM2)
                        {
                            <!-- Single Best Seller Products -->
                            <div class="single-best-seller-product d-flex text2">
                                <div class="product-thumbnail">
                                    <a href="~/Home/BlogDetail"><img src="/Content/Img/@item.PicturVMNew.Name" alt=""></a>
                                </div>
                                <div class="product-info m-3">
                                    <a href="shop-details.html">@item.ProductVMNew.NameProduct </a>
                                    <p>@item.PriceVMNew.Price</p>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

        </div>

    </div>
    <div class="row">
        <div class="col-12">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</section>
<!-- ##### Blog Area End ##### -->
